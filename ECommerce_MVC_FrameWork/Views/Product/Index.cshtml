@model IEnumerable<ECommerce_MVC_FrameWork.Models.Product>

@{
    ViewBag.Title = "Product List";
}

<h2  class="text-center">Product List</h2>
<p>
   
    @Html.ActionLink("Add New Product", "Create", null, new { @class = "btn btn-outline-secondary" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>
                   
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { @class = "btn btn-outline-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
